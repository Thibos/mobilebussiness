<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mobilebussiness.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#607D8B"
            android:fontFamily="sans-serif-light"
            android:text="Mobi Dev Factory"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <com.cunoraz.gifview.library.GifView
            android:id="@+id/gif_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:gif="@mipmap/mobile" />

        <TextView
            android:id="@+id/textView_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobi Dev Factory is a startup founded by Thabo Mahlangu that design and develop custom mobile apps for your needs"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact us: infor@mobi.dev.fectory.mobi"
            android:textStyle="italic" />

    </LinearLayout>
</ScrollView>
